{
  "compilerOptions": {
    "module": "CommonJS",
    "target": "ES2015",
    "lib": ["ESNext"],
    "sourceMap": true,
    "outDir": "dist",
    "noImplicitAny": true,
    "declaration": true,
    "moduleResolution": "node",
    "isolatedModules": true,
    "baseUrl": "src"
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}
